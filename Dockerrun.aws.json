{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "hotafrika/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server", 
            "image": "hotafrika/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "hotafrika/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "hotafrika/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client",
                "server"
            ]
        }
    ]
}